/* detail.css */
page {
    background: #fbfbfb;
    height: 100%;
}

.root-wrap {
    height: 100%;
}

.wrapper {
    padding-bottom: 96 rpx;
}

.wrapper .top-img {
    width: 100%;
    height: 470 rpx;
    vertical-align: top;
}

.wrapper .info {
    padding: 0 36 rpx;
}

.wrapper .info-title {
    padding: 40 rpx 0;
    line-height: 60 rpx;
    font-size: 44 rpx;
    font-weight: 500;
    color: #333333;
}

.wrapper .info-desc {
    font-size: 28 rpx;
    line-height: 30 rpx;
    color: #c1c1c1;
}

.wrapper .info-desc-author {
    max-width: 65%;
    /*当文字超出之后，对文字的处理方式，使用省略号*/
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.wrapper .info-line {
    margin-top: 24 rpx;
}

.wrapper .footbar {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 96 rpx;
    line-height: 96 rpx;
    background: #ffffff;
    font-size: 32 rpx;
    color: #333333;
}

.wrapper .footbar-back, .wrapper .footbar-share {
    position: absolute;
    width: 96rpx;
    height: 96rpx;
    bottom: 0;
    z-index: 2;
}
.wrapper .footbar .icon{
    position: absolute;
    width: 42rpx;
    height: 38rpx;
    top:30rpx;
}
.wrapper .footbar-back{
    left: 0;
}
.wrapper .footbar-back-icon{
    left: 30rpx;
    background: url(https://n1image.hjfile.cn/mh/2017/06/06/1305a8ac4dc9347b59cc8c2c667122e5.png) 0 0 no-repeat;
    background-size: contain;
}
.wrapper .footer-list{
    left: 0;
}
.wrapper .footbar-list-icon{
    left: 30rpx;
    background: url(https://n1image.hjfile.cn/mh/2017/06/09/1e630ac45547e6ab5260928e1d57a3c6.png) 0 0 no-repeat;
    background-size: contain;
}
.wrapper .footbar-btn{
    text-align: center;
    margin: 0 96rpx;
    line-height: 96rpx;
}
.wrapper .footbar-share{
    right: 0;
}
.wrapper .footbar-share-icon{
    right: 30rpx;
    background: url(https://n1image.hjfile.cn/mh/2017/06/09/ebc3852fb865bd19182c09ca599d8ac1.png) 0 0 no-repeat;
    background-size: contain;
}
.wrapper .cleanBtnDefault{
    margin: 0;
    padding: 0;
    background: #ffffff;
    border: 0;
    border-radius: 0;
}
.wrapper .cleanBtnDefault:after{
    content: '';
    border: none;
    border-radius: 0;
    width: 0;
    height: 0;
}